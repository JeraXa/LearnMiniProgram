<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>hello world\n</text>
<text>Nihao xiaochengxu\n</text>

<!-- 2.selectable: true -->
<!-- 默认区情况下text中的文本长按是不能选中 -->
<!-- 文档中selectable可能已经废弃？ -->
<text selectable='{{true}}'>hello jarax\n</text>

<!-- 3.space:决定文本空格的大小 -->
<!-- ensp	中文字符空格一半大小	
emsp	中文字符空格大小	
nbsp	根据字体设置的空格大小	-->
<text>hello world\n</text>
<text space="nbsp">hello world\n</text>
<text space="ensp">hello world\n</text>
<text space="emsp">hello world\n</text>

<!-- 4.decode 属性：是否解码文本 -->
<text decode>5 &gt; 3</text>